@model LessonDeleteViewModel


<h1 class="display-6 text-danger mt-3">Ders Siliniyor...!</h1>
<hr />
<table class="table w-50 table-bordered">
    <tr>
        <th>Id:</th>
        <td>@Model.Id</td>
        <th>Ad:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Ajans ismi:</th>
        <td>@Model.AgencyName</td>
        <th>Price:</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Aktif mi?:</th>
        <td class="@(Model.IsActive ? "text-success" : "text-danger") fw-bold ">
            @(Model.IsActive ? "AKTİF" : "PASİF")
        </td>
       
    </tr>
    <tr>
        <th>Kontenjan:</th>
        <td>@Model.Kontenjan</td>
        <th>Ders saati:</th>
        <td>@Model.PeriodOfStudy</td>
    </tr>
</table>
<a class="btn btn-warning" asp-area="Admin" asp-controller="Lesson" asp-action="Index">Vazgeç</a>

<a class="btn btn-danger" asp-area="Admin" asp-controller="Lesson" asp-action="HardDelete"
   asp-route-id="@Model.Id">Kalıcı Olarak Sil!</a>
<div class="mt-2">
    <label class="text-danger">
        * @Model.Name adlı kitap, veri tabanından kalıcı olarak
        silinecektir!
    </label>
</div>
