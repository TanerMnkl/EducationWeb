@model List<AgencyViewModel>
<div class="row my-2">
    <div class="col-md-6">
        <h1 class="display-6">Ajanslar</h1>
    </div>
    <div class="col-md-6 d-flex align-items-center justify-content-end">
        <a asp-area="Admin"
           asp-controller="Agencies"
           asp-action="Create"
           class="btn btn-primary">Yeni Yazar</a>
    </div>
</div>


<div class="card mb-4">
    <div class="card-body">
        <table id="data-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Fotoğraf</th>
                    <th>Ad Soyad</th>
                    <th>Yaş</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Son Değiştirilme Tarihi</th>
                    <th>Aktif mi?</th>
                    <th width="100">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agencies in Model)
                {
                    <tr>
                        <td>@agencies.Id</td>
                      @*  <td>
                            <img src="~/images/authors/@author.PhotoUrl" width="50">
                        </td*@>
                        <td>@agencies.Name</td>

                        <td>@agencies.CreatedDate.ToShortDateString()</td>
                        <td>@agencies.ModifiedDate.ToShortDateString()</td>
                        <td>
                            <form class="form-check"
                                  asp-area="Admin"
                                  asp-controller="Agencies"
                                  asp-action="UpdateIsActive"
                                  asp-route-id="@agencies.Id"
                                  id="form-agencies-is-active-@agencies.Id">
                                <div class="form-check form-switch">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           role="switch"
                                           id="flexSwitchCheckChecked" @(agencies.IsActive ? "checked" : "")
                                           onchange="document.getElementById(`form-agencies-is-active-@agencies.Id`).submit();">
                                </div>

                            </form>
                        </td>
                        <td>
                            
                          

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Css{
    @await Html.PartialAsync("_DataTablesStylesPartial")
}

@section Js{
    @await Html.PartialAsync("_DataTablesScriptsPartial")
}